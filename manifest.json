{
  "manifest_version": 3,
  "name": "Word Filter Extension",
  "version": "1.0",
  "description": "Blocks posts containing specific words",
  "permissions": ["storage"],
  "action": {
    "default_popup": "ui/text-setter.html"
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ]
}